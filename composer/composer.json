{
    "require" : {
        "google/apiclient": "1.1.*",
        "symfony/console": "2.*",
        "ydin": "1.*",

        "slim/slim": "3.*",
        "symfony/dependency-injection": "3.*",
        "zendframework/zend-db": "2.*",
        "doctrine/cache": "1.*",
        "bridge": "*"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../app/Bridge"
        },
        {
            "type": "path",
            "url": "../app/Ydin"
        }
    ],
    "autoload": {
        "classmap": [
            "../app/models",
            "../app/components/base",
            "../app/components/helper",
            "../app/components/manager"
        ]
    }
}
